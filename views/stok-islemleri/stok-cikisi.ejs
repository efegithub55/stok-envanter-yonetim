              <h5>Toplam Yeni Stok</h5>
              <p class="danger">118 birim</p>
            </div>
          </div>
          <div class="form-divider"></div>
          <div class="entry-details">
            <div class="form-input">
              <label for="entry-date">Çıkış Tarihi</label>
              <input type="date" name="entry-date" />
            </div>
            <div class="form-input">
              <label for="suppler">Tedarikçi</label>
              <select name="suppler" id="suppler">
                <option selected disabled>Tedarikçi Seçin</option>
              </select>
            </div>
            <div class="form-input">
              <label for="waybill">İrsaliye/Fatura No</label>
              <input
                type="text"
                name="waybill"
                placeholder="Örn.: IRS-2025-001"
              />
            </div>
          </div>
        </div>
      </div>
